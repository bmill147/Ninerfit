{
    "compilerOptions": {
      "target": "ES2020",          // You can keep this for modern JavaScript features
      "module": "CommonJS",
      "moduleResolution": "Node",  // Use Node's module resolution strategy
      "jsx": "react",              // Ensures React JSX is handled correctly
      "strict": true,              // Enable strict type-checking
      "esModuleInterop": true,     // Enable compatibility with CommonJS
      "skipLibCheck": true,        // Skip checking libraries
      "resolveJsonModule": true,   // Enable importing JSON files
      "allowSyntheticDefaultImports": true // Allow synthetic imports
    },
    "include": ["src/**/*"],      // Include all files in the 'src' folder
    "exclude": ["node_modules"]   // Exclude node_modules from compilation
  }
  